// schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("DB_URL") 
}

model Product {
  id            Int     @default(autoincrement()) @id
  name          String  @unique
  description   String?
  published     Boolean @default(false)
  image         String?
  price         Int @default(0)
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    Int?
  order Order[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  isHighlight Boolean @default(false)
  image String?
  product Product[]
  group Group[]
}

model Group {
  id Int @id @default(autoincrement())
  name String @unique
  category Category[]
}


model Banner {
  id    Int @id @default(autoincrement())
  image String
}

model Order {
  id Int @id @default(autoincrement())
  uuid String
  name String
  status Status @default(DRAFT)
  payment_status PaymentStatus @default(UNPAID)
  address String
  phone String
  notes String?
  product_name String
  price Int
  product Product @relation(fields:[productId], references:[id])
  productId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  DRAFT
  CONFIRM
  SHIPPED
  COMPLETED
}

enum PaymentStatus {
  PAID
  UNPAID
}
